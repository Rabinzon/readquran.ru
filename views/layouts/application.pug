  body.d-flex.flex-column.justify-content-between
    nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container
        a.navbar-brand(href='/')
          i.bi.bi-book-half.pe-1
          span.d-none.d-md-inline.fw-bold Перевод Корана
        .navbar-form
          select.form-select(aria-label='Default select example').js-translation-select.d-flex.ms-auto
            option(value='1') Кулиев Э. Р.
            option(value='2') И.Ю. Крачковский
            option(value='3') Абу Адель
            option(value='4') Османов М. Н. О.
            option(value='5') И. В. Порохова

          form(action="/search").d-flex
            .input-group
              input.form-control(type='search' value=query || '' name="query" placeholder='Поиск аятов' aria-label='Search')
              button.btn.btn-outline-success(type='submit')
                i.bi.bi-search

    main.container
      button.btn.btn-fixed.js-to-top-btn.d-none.btn-dark.btn-sm вверх
      block content
    footer.footer.p-3
      .container
        .d-flex.align-items-center.justify-content-between
          .text-center
            span.text-muted
              small 2017-2023 &nbsp;
              a(href='/')
                small Коран в хронологическом порядке

    script(src='/main.js')
