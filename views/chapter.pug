extends ./layouts/application.pug

block content
  .row.justify-content-md-center
    .col-md-8.col-sm-12
      .my-3
        h1(style="word-break: break-all;").mb-0: small= 'Сура ' + id + ' «' + name + '»'
        small: i хронолоческий порядок суры &nbsp;
          !=chronologicalOrder
      p.lead=verses[0].translation.author

  .row
    .col-md-8.col-sm-12.m-auto
      each verse in verses || []
        p.ayat(id='ayat-' + verse.order)
          span.badge.bg-dark.me-1=verse.chapterId + ':' + verse.order
          span!=verse.text
